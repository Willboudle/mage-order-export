<config>
    <sections>
        <sales>
            <groups>
		        <export translate="label comments">
		          <label>Order Export</label>
		          <frontend_type>text</frontend_type>
		          <sort_order>900</sort_order>
		          <show_in_default>1</show_in_default>
		          <show_in_website>1</show_in_website>
		          <show_in_store>1</show_in_store>
		          <fields>
		            <recname >
		                <label>Export Mail Receiver Name</label>
		                <frontend_type>text</frontend_type>
		                <sort_order>10</sort_order>
		                <show_in_default>1</show_in_default>
		                <show_in_website>1</show_in_website>
		                <show_in_store>1</show_in_store>
		            </recname>
		            <recmail >
		                <label>Export Mail Receiver Mail</label>
		                <frontend_type>text</frontend_type>
		                <sort_order>20</sort_order>
		                <show_in_default>1</show_in_default>
		                <show_in_website>1</show_in_website>
		                <show_in_store>1</show_in_store>
		            </recmail>
		            <filter_status>
		                <label>Status of Orders</label>
						<frontend_type>select</frontend_type>
                		<source_model>orderExport/system_config_source_status</source_model>
                		<sort_order>30</sort_order>
		                <show_in_default>1</show_in_default>
		                <show_in_website>1</show_in_website>
		                <show_in_store>1</show_in_store>
		            </filter_status>
		            <path >
		                <label>Path for the csv file to be stored</label>
		                <frontend_type>text</frontend_type>
		                <sort_order>5</sort_order>
		                <show_in_default>1</show_in_default>
		                <show_in_website>1</show_in_website>
		                <show_in_store>1</show_in_store>
		            </path>
		          </fields>
		        </export>
            </groups>
        </sales>
    </sections>
</config>